<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FBE2E2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicationManager">

    <include
        android:id="@+id/week_toolbar"
        layout="@layout/week_toolbar"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_background"
        app:itemIconSize="35dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemPaddingBottom="1dp"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_taskbar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/medicationManagerCard"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginTop="-50dp"
        app:cardBackgroundColor="#d9d9d9"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/medicationManagerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Medication Manager"
                android:textColor="#000000"
                android:textSize="27sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/userProfileButton"
                app:layout_constraintHorizontal_bias="0.179"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.703" />

            <ImageButton
                android:id="@+id/userProfileButton"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:background="#d9d9d9"
                android:contentDescription="User Profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.737"
                app:layout_constraintStart_toEndOf="@+id/medicationManagerText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.666"
                app:srcCompat="@drawable/user_profile_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/calendarCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.07">

        <LinearLayout
            android:id="@+id/weekLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/mondayButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@android:color/white"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="Mon"
                android:textAllCaps="false"
                android:textSize="17dp"
                app:layout_constraintWidth_percent="0.9"
                android:layout_weight="1" />
            <Button
                android:id="@+id/tuesdayButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@android:color/white"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="Tue"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/wednesdayButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@android:color/white"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="Wed"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/thursdayButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@android:color/white"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="Thu"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/fridayButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@android:color/white"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="Fri"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/saturdayButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@android:color/white"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="Sat"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/sundayButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@android:color/white"
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="50dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="Sun"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/todayMedicationTextLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintWidth_percent="0.9">

        <TextView
            android:id="@+id/todayMedicationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Today's Medication Plan"
            android:textColor="#000000"
            android:textSize="17sp"
            />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/todayMedicationCard"
        android:layout_width="0dp"
        android:layout_height="160dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todayMedicationTextLayout"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.9"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/medicationImageInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/medication_image"
                    android:layout_weight="1"

                    />
                <LinearLayout
                    android:id="@+id/medicationInfoLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MEDICATION NAME"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="19dp"
                        android:layout_marginBottom="-10dip"
                        android:textColor="#000000"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dosage"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dosing Schedule"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:fontFamily="@font/poppins_bold"
                        />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/horizontal_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:layout_below="@+id/medicationImageInfoLayout"
                android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontal_line"
            android:layout_alignParentBottom="true"
            >


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/skipButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/x_skip"
                    android:text ="Skip"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:backgroundTint="@android:color/white"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/dislikeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/check_done"
                    android:text ="Done"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:backgroundTint="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/expiringMedicationTextLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todayMedicationCard"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintWidth_percent="0.9">

        <TextView
            android:id="@+id/expiringMedicationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Expiring Soon"
            android:textColor="#000000"
            android:textSize="17sp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>