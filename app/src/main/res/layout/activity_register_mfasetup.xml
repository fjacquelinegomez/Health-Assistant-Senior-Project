<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#FBE2E2"
    tools:context=".RegisterMFASetup">

        <TextView
            android:id="@+id/mfaSetupText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Set Up Multi-Factor Authentication"
            android:textColor="@color/black"
            android:textSize="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.12"
            app:layout_constraintWidth_percent="0.9"
           />
        <TextView
            android:id="@+id/mfaDescriptText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Set up 2MFA to strengtthen your account security. It helps verify your identity and serves as a backup for recovering your account if you forget your password or username"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/mfaSetupText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintWidth_percent="0.9"/>
        <TextView
            android:id="@+id/mfaDescriptText2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="On the next page, you can add your phone number for additional security."
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/mfaDescriptText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintWidth_percent="0.9"
            />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mfaDescriptText2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/mfaSetupButton"
            android:layout_width="306dp"
            android:layout_height="56dp"
            android:background="@android:color/black"
            android:fontFamily="@font/poppins_bold"
            android:text="Set Up MFA"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="20dp" />
        <Button
            android:id="@+id/mfaSkipButton"
            android:layout_width="306dp"
            android:layout_height="56dp"
            android:background="@android:color/holo_red_dark"
            android:fontFamily="@font/poppins_bold"
            android:text="Not Now"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="30dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>